<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="8dp"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_thin"
            android:text="01-Feb-2018 10:00:00"
            android:textSize="12dp" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"/>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/time"
            android:layout_toRightOf="@+id/user_profile_photo"
            android:fontFamily="@font/roboto_black"
            android:hint="Abdul Ghanni"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/title"
            android:layout_toRightOf="@+id/title"
            android:fontFamily="@font/roboto_black"
            android:hint="Completed"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/feed_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/status"
            android:fontFamily="@font/roboto_black"
            android:hint="Projects"
            android:textColor="#000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/feed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_profile_photo"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_marginTop="20px"
            android:fontFamily="@font/roboto_black"
            android:hint="Perbaikan Absentism PERSYSH"
            android:textColor="#000"
            android:textSize="14dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>